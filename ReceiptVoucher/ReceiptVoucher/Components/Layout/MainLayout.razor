@inherits LayoutComponentBase

<style>
    :root {
        --color-teal: #3090C7;
    }
</style>

<MudRTLProvider RightToLeft="true">
    <MudThemeProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />
   
    <MudLayout>
        <MudAppBar Style="background-color: var(--color-teal);">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <h4>جمعية مكارم عابري السبيل</h4>
            <MudSpacer />
            <MudImage Src="images\header-logo.png" Style="margin-left:20px" Width="150" Height="50" Alt="Icon" />

            <MudImage Src="images\vision.png" Style="margin-right:10px;margin-left:2%;" Width="70" Height="35" Alt="Icon" />
        </MudAppBar>
        <MudDrawer @bind-Open="@_drawerOpen">
            <MyNavMenu />
        </MudDrawer>
        <MudMainContent>
            <MudContainer Fixed="true" MaxWidth="MaxWidth.Medium">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>

</MudRTLProvider>



@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

