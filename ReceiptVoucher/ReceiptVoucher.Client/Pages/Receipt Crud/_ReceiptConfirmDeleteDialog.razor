<MudDialog>
    <DialogContent>
        <MudText>هل انت متأكد من حذف بيانات الفرع: @ReceiptId ؟ </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="@(() => MudDialog.Close(DialogResult.Ok(false)))">No</MudButton>
        <MudButton Color="Color.Error" OnClick="@(() => MudDialog.Close(DialogResult.Ok(true)))">Yes</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public int? ReceiptId { get; set; }
    
    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();

}